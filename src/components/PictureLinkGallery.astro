---
import * as fs from "fs";

interface albumLink {
  img: string; //url for image to be displayed.
  destination: string; //href for the actual link.
  tooltip: string;
}

function getLinks(): albumLink[] {
  let path = import.meta.env.PUBLIC_ALBUMS;
  let albums = fs.readdirSync(path);
  path = path.slice(1)

  return albums.map(album =>{
    let albumPath = path + "/" + album;
    
    let img = albumPath + "/" + fs.readdirSync("." + albumPath)[0]
    let destination = "/projekte/"+ album;
    let tooltip = "please define the format for this";
    
    return {img, destination, tooltip}
  })
}

const links: albumLink[] = getLinks()
---

<div class="linkGallery">
  {links.map(item =>{
    let {img, destination, tooltip} = item;
    return <a class="pictureContainer" href={destination} data-tooltip={tooltip} >
      <img class="pictureLink" src={img}/>
    </a>
  })}
</div>

<style lang="scss">
.pictureContainer {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
  --opacity: 0;
  --translate: -5%;
  
  &::before {
    box-sizing: border-box;
    content: attr(data-tooltip);
    display: block;
    position: absolute;
    height: 110%;
    width: 100%;
    padding: 25%;
    background-color: white;
    opacity: var(--opacity);
    transform: translateY(var(--translate));
    transition: all 0.35s ease;
  }
  &:hover {
    --opacity: 0.7;
    --translate: 0;
  }
}

.pictureLink {
  width: 100%;
  height: 100%;
}

.linkGallery {
  width: 100vw;
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  grid-template-rows: auto;
}
</style>